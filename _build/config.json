              "value": "0"
            },
            {
              "name": "saltText",
              "value": "FileDownload"
            },
            {
              "name": "sortBy",
              "type": "list",
              "options": [
                {
                  "name": "filedownloadr.filedownload.sortBy.filename",
                  "value": "filename"
                },
                {
                  "name": "filedownloadr.filedownload.sortBy.extension",
                  "value": "extension"
                },
                {
                  "name": "filedownloadr.filedownload.sortBy.path",
                  "value": "path"
                },
                {
                  "name": "filedownloadr.filedownload.sortBy.size",
                  "value": "size"
                },
                {
                  "name": "filedownloadr.filedownload.sortBy.sizeText",
