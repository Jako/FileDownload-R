            {
              "name": "dateFormat",
              "value": "Y-m-d"
            },
            {
              "name": "fileCss",
              "value": ""
            },
            {
              "name": "fileJs",
              "value": ""
            },
            {
              "name": "getFile",
              "value": ""
            },
            {
              "name": "imgLocat",
              "value": ""
            },
            {
              "name": "imgTypes",
              "value": "fdImages"
            },
            {
              "name": "saltText",
              "value": "FileDownload"
            },
            {
              "name": "tpl",
              "value": "@INLINE: <a href=\"[[+link]]\">[[+filename]]</a>"
            },
            {
              "name": "userGroups",
              "value": ""
            }
          ]
        },
        {
          "name": "FileDownloadEmailPlugin",
          "description": "Snippet as a plugin for FileDownload R's.",
          "file": "filedownload.formit.email.plugin.php",
          "properties": []
        }
      ],
      "chunks": [
        {
          "name": "fdImages",
          "description": "Image types of the files for FileDownload",
          "file": "fdimages.chunk.txt"
        },
        {
          "name": "fileDescription",
          "description": "File descriptions for FileDownload snippet",
          "file": "filedescription.chunk.txt"
        },
        {
          "name": "FileDownloadEmailChunk",
          "description": "Email chunk for FileDownload's plugin",
          "file": "filedownloademail.chunk.html"
        }
      ]
    },
    "systemSettings": [
      {
        "key": "exclude_scan",
        "type": "textfield",
        "area": "file",
        "value": ".,..,Thumbs.db,.htaccess,.htpasswd,.ftpquota,.DS_Store"
      },
      {
        "key": "use_geolocation",
        "type": "combo-boolean",
        "area": "geolocation",
        "value": "0"
      },
      {
        "key": "ipinfodb_api_key",
        "type": "textfield",
        "area": "geolocation",
        "value": ""
      }
    ]
  },
  "database": {
    "tables": [
      "fdCount",
      "fdDownloads",
      "fdPaths"
    ]
  },
  "build": {
    "readme": "docs/readme.txt",
    "license": "docs/license.txt",
    "changelog": "docs/changelog.txt",
    "resolver": {
      "after": [
        "update_tables.php"
      ]
    }
  }
